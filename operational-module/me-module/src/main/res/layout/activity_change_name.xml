<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f7f7f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_8"
            tools:context=".contract.view.activity.LoginActivity">

            <LinearLayout
                android:id="@+id/llId"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@drawable/shape_me_bg_deal"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="请输入昵称"
                    android:text="账号111111"
                    android:background="@color/transparent"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/color_666666"
                    android:textSize="@dimen/dp_16" />

                <ImageView
                    android:id="@+id/imgClear"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="11dp"
                    android:background="@mipmap/app_name_clear" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="@dimen/dp_30"
                android:background="@drawable/shape_setting_bg_logout"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15" />

        </LinearLayout>

        <include layout="@layout/common_title" />
    </FrameLayout>
</layout>