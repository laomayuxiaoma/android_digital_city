<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/shape_me_bg_deal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            tools:context=".contract.view.activity.LoginActivity">

            <EditText
                android:id="@+id/etOldPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入原密码"
                android:textColor="@color/gray_33"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewOldPwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f2"
                app:layout_constraintTop_toBottomOf="@+id/etOldPwd" />

            <EditText
                android:id="@+id/etNewPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入新密码"
                android:textColor="@color/gray_33"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewOldPwd" />

            <View
                android:id="@+id/viewNewPwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f2"
                app:layout_constraintTop_toBottomOf="@+id/etNewPwd" />

            <EditText
                android:id="@+id/etConfirmPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请确认新密码"
                android:textColor="@color/gray_33"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/dp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etNewPwd" />

            <View
                android:id="@+id/viewConfirmPwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f2"
                app:layout_constraintTop_toBottomOf="@+id/etConfirmPwd" />

            <TextView
                android:id="@+id/tvForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="忘记密码？"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewConfirmPwd" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/shape_setting_bg_logout"
                android:gravity="center"
                android:text="确定"
                app:layout_constraintTop_toBottomOf="@+id/tvForgetPassword" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include layout="@layout/common_title" />
    </FrameLayout>


</layout>