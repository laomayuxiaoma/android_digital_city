<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_deal_bg_white_5"
        android:padding="@dimen/dp_15"
        tools:ignore="MissingDefaultResource">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_deal_bg_name"
            android:gravity="center"
            android:text="今"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="158****0000"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/tvName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="数量：1"
            android:textColor="@color/color_69"
            android:textSize="@dimen/dp_12"
            app:layout_constraintLeft_toLeftOf="@+id/tvPhone"
            app:layout_constraintTop_toBottomOf="@+id/tvPhone" />

        <TextView
            android:id="@+id/tvTurnover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="最近30日成交量：1"
            android:textColor="@color/color_69"
            android:textSize="@dimen/dp_12"
            app:layout_constraintLeft_toLeftOf="@+id/tvPhone"
            app:layout_constraintTop_toBottomOf="@+id/tvNum" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.47"
            android:textColor="@color/gray_33"
            android:textSize="17dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPriceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/gray_33"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
            app:layout_constraintRight_toLeftOf="@+id/tvPrice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:text="单价"
            android:textColor="@color/color_69"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
            app:layout_constraintRight_toLeftOf="@+id/tvPriceType" />

        <TextView
            android:layout_width="@dimen/dp_62"
            android:layout_height="@dimen/dp_28"
            android:layout_marginBottom="@dimen/dp_3"
            android:background="@drawable/shape_deal_bg_fcac22_3"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_FCAC22"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>