<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:background="@color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:orientation="vertical"
            android:background="@drawable/base_shape_white_8">

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/color_272636"
                android:text="分享到"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">
                <LinearLayout
                    android:id="@+id/img_wechat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:background="@mipmap/wechat"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信"
                        android:textSize="13sp"
                        android:textColor="#8B8A99"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/img_circleOfFriends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:background="@mipmap/circle_of_friends"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友圈"
                        android:textSize="13sp"
                        android:textColor="#8B8A99"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_canel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_272636"
                android:textSize="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dp_34"
                android:gravity="center"
                android:text="取消"/>
        </LinearLayout>
    </FrameLayout>

</layout>