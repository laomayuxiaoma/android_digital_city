<resources>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--  ============== 动画 ================== -->
    <style name="AnimScaleInScaleOutOverShoot" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in_shot</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
        <item name="android:interpolator">@anim/left_in</item>
    </style>
    <style name="AnimDownInDownOutOverShoot" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/down_in</item>
        <item name="android:windowExitAnimation">@anim/down_out</item>
        <item name="android:interpolator">@anim/left_in</item>
    </style>
    <style name="AnimUpInUpOutOverShoot" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/up_in</item>
        <item name="android:windowExitAnimation">@anim/up_out</item>
        <item name="android:interpolator">@anim/left_in</item>
    </style>


    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference"/>
        <attr name="mvAnimDuration" format="integer|reference"/>
        <attr name="mvTextSize" format="dimension|reference"/>
        <attr name="mvTextColor" format="color|reference"/>
        <attr name="mvSingleLine" format="boolean"/>
        <attr name="mvGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="mvDirection">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
    </declare-styleable>

</resources>
