<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDefault"
    android:paddingLeft="18dp"
    android:paddingTop="14dp"
    android:paddingRight="18dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="11.96dp"
        android:layout_height="15.52dp"
        android:background="@mipmap/app_item_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="北京站"
        android:textColor="#22262E"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/img_location"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="北京市东城区毛家湾胡同甲13号"
        android:textColor="#acb2bf"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/img_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_search" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_search" />

</androidx.constraintlayout.widget.ConstraintLayout>